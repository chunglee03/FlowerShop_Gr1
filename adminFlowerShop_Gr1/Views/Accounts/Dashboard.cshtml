@model adminFlowerShop_Gr1.Models.TblCustomer

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TblOrder> DanhSachDonHang = ViewBag.DonHang;
    adminFlowerShop_Gr1.ModelViews.ChangePasswordViewModel changePassword = new adminFlowerShop_Gr1.ModelViews.ChangePasswordViewModel();
}

<!-- Breadcrumb Area Start Here -->
<div class="breadcrumbs-area position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="breadcrumb-content position-relative section-content">
                    <h3 class="title-3">My Account</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Tài khoản của tôi</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End Here -->
<!-- my account wrapper start -->
<div class="my-account-wrapper mt-no-text">
    <div class="container container-default-2 custom-area">
        <div class="row">
            <div class="col-lg-12 col-custom">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-custom">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="#dashboad" class="active" data-bs-toggle="tab">
                                    <i class="fa fa-dashboard"></i>
                                    Thông tin tài khoản
                                </a>
                                <a href="#orders" data-bs-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Đơn hàng</a>
                                
                                <a href="#account-info" data-bs-toggle="tab"><i class="fa fa-user"></i> Thay đổi mật khẩu</a>
                                <a href="/dangxuat.html"><i class="fa fa-sign-out"></i> Đăng xuất</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->
                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 col-md-8 col-custom">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Dashboard</h3>
                                        <div class="welcome">
                                            <p>Hello, <strong>@Model.FullName</strong> </p>
                                        </div>
                                        <p class="mb-0">Email: @Model.Email</p>
                                        <p class="mb-0">Số điện thoại: @Model.Phone</p>
                                        <p class="mb-0">Địa chỉ: @Model.Address</p>
                                        
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade" id="orders" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Danh sách đơn hàng</h3>
                                        <div class="myaccount-table table-responsive text-center">
                                            @await Html.PartialAsync("_DonhangPartialView",DanhSachDonHang)
                                        </div>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                @await Html.PartialAsync("_ChangePasswordPartialView",changePassword)
                            </div>
                        </div> <!-- My Account Tab Content End -->
                    </div>
                </div> <!-- My Account Page End -->
            </div>
        </div>
    </div>
</div>
<!-- my account wrapper end -->
