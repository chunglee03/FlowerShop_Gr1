@model List<adminFlowerShop_Gr1.ModelViews.CartItem>
@if (Model != null && Model.Count() > 0)
{
    <div class="cart-item-wrapper dropdown-sidemenu dropdown-hover-2">
        @foreach( var item in Model)
        {
            string url = $"/{item.product.Alias}-{item.product.ProductId}.html";
            <div class="single-cart-item">
                <div class="cart-img">
                            <a href="@url"><img src="~/images/products/@item.product.Thumb" alt=""></a>
                </div>
                <div class="cart-text">
                            <h5 class="title"><a href="@url">@item.product.ProductName</a></h5>
                    <div class="cart-text-btn">
                        <div class="cart-qty">
                            <span class="cart-price">@item.amount x @item.product.Price.Value.ToString("#,##0") VNĐ</span>
                        </div>
                        <button type="button"><i class="ion-trash-b"></i></button>
                    </div>
                </div>
            </div>
        }
        <div class="cart-price-total d-flex justify-content-between">
            <h5>Tổng tiền</h5>
            <h5>@Model.Sum(x=>x.TotalMoney).Value.ToString("#,##0") VNĐ</h5>
        </div>
        <div class="cart-links d-flex justify-content-between">
            <a class="btn product-cart button-icon flosun-button dark-btn" href="cart.html">Xem giỏ hàng</a>
            <a class="btn flosun-button secondary-btn rounded-0" href="checkout.html">Thanh toán</a>
        </div>
    </div>
}
else
{
    <div class="cart-item-wrapper dropdown-sidemenu dropdown-hover-2">
		<p>Giỏ hàng rỗng</p>
        <a class="btn product-cart button-icon flosun-button dark-btn" href="shop.html">Tìm sản phẩm</a>
    </div>
    
}
